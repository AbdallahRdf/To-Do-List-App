<%- include('./partials/head.ejs') %>

<body>
    <div class="rounded border border-slate-400 flex flex-col items-center w-5/6 md:w-2/3 lg:w-1/3 mx-auto mt-20 px-4 py-8">
        <h2 class="text-xl md:text-3xl text-slate-600">Create a strong password</h2>
        <form action="/reset-password/<%= token %>" method="post" class="w-full">

            <div class="flex flex-col w-full my-3">
                <label class="mb-1 ms-2 text-slate-600" for="password">New password</label>
                <input class="rounded-full text-base border border-slate-500 py-2 px-4 me-1" type="password" name="password">
                <% if (typeof errorMessage !== 'undefined' && errorMessage) { %>
                    <span class="text-red-500 text-sm ms-2 mt-1"><%= errorMessage.passwordError %></span>
                <% } %>
            </div>

            <div class="flex flex-col w-full my-3">
                <label class="mb-1 ms-2 text-slate-600" for="confirmPassword">Confirm you new password</label>
                <input class="rounded-full text-base border border-slate-500 py-2 px-4 me-1" type="password" name="confirmPassword">
                <% if (typeof errorMessage !== 'undefined' && errorMessage) { %>
                    <span class="text-red-500 text-sm ms-2 mt-1"><%= errorMessage.confirmPasswordError %></span>
                <% } %>
            </div>

            <div class="flex flex-col w-full my-3"><input class="rounded-full cursor-pointer bg-sky-600 hover:bg-sky-500 text-white py-2 px-4 text-lg mt-3 w-full" type="submit" value="Save new password"></div>
        </form>
    </div>
    <div class="mt-3">
        <a class="underline underline-offset-1 hover:underline-offset-4 text-blue-500 block text-center font-semibold text-lg" href="/login">Log in</a>
    </div>
</body>
</html>