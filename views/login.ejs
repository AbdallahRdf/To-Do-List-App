<%- include('./partials/head.ejs') %>

<body>
    <div class="rounded border border-slate-400 flex flex-col items-center w-5/6 md:w-2/3 lg:w-1/3 mx-auto mt-20 px-4 py-8">
        <h2 class="text-3xl text-slate-600">Welcome back!</h2>
        <% if (typeof message !== 'undefined' && message.error && message.error.length > 0) { %>
            <div class="bg-red-100 w-full border border-red-700 text-center rounded py-4 mt-2 text-red-700"><%= message.error[0] %></div>
        <% } %>
        <form action="/login" method="post" class="w-full">
            <div class="flex flex-col w-full my-3">
                <label class="mb-1 ms-2 text-slate-600" for="username">Username</label>
                <input class="rounded-full text-base border border-slate-500 py-2 px-4 me-1" type="text" name="username" placeholder="John Doe" id="username">
                <% if (typeof errorMessage !== 'undefined' && errorMessage) { %>
                    <span class="text-red-500 text-sm ms-2 mt-1"><%= errorMessage.usernameError %></span>
                <% } %>
            </div>
            <div class="flex flex-col w-full my-3 relative">
                <label class="mb-1 ms-2 text-slate-600" for="password">Password</label>
                <input class="rounded-full text-base border border-slate-500 py-2 px-4 me-1" type="password" name="password" placeholder="password" id="password">
                <button type="button" id="showPasswordBtn" class="absolute top-9 right-4">
                    <img id="passwordImg" src="/img/icons8-eye-48.png" width="22" alt="show password" title="show password">
                </button>
                <% if (typeof errorMessage !== 'undefined' && errorMessage) { %>
                    <span class="text-red-500 text-sm ms-2 mt-1"><%= errorMessage.passwordError %></span>
                <% } %>
                <a class="underline underline-offset-1 hover:underline-offset-4 text-blue-500 block text-sm ms-3 mt-1" href="/forgot_password">Forgot your password ?</a>
            </div>
            <div class="flex flex-col w-full my-3"><input class="rounded-full cursor-pointer bg-sky-600 hover:bg-sky-500 text-white py-2 px-4 text-lg mt-2 w-full" type="submit" value="Login"></div>
        </form>
    </div>
    <div class="mt-3">
        <p class="text-slate-500 text-center">You don't have an account ?</p>
        <a class="underline underline-offset-1 hover:underline-offset-4 text-blue-500 block text-center font-semibold text-lg" href="/signup">Sign up</a>
    </div>

    <script>
        const passwordInput = document.querySelector("#password");
        const passwordImg = document.querySelector("#passwordImg");

        document.querySelector("#showPasswordBtn").addEventListener("click", () => {
            if(passwordInput.type === "password"){
                passwordInput.type = "text";
                passwordImg.src = "/img/icons8-closed-eye-48.png";
            } else {
                passwordInput.type = "password";
                passwordImg.src = "/img/icons8-eye-48.png";
            }
        });    </script>
</body>
</html>